<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/dimens_10"
        android:paddingTop="@dimen/dimens_10">

        <ImageView
            android:id="@+id/coin_img"
            android:layout_width="@dimen/dimens_40"
            android:layout_height="@dimen/dimens_40"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/dimens_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/coin_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_5"
            android:layout_toLeftOf="@+id/coin_ups_and_downs"
            android:layout_toRightOf="@+id/coin_img"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_16"/>

        <TextView
            android:id="@+id/coin_number_for_cny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coin_number"
            android:layout_marginRight="@dimen/dimens_5"
            android:layout_toLeftOf="@+id/coin_one_for_cny"
            android:layout_toRightOf="@+id/coin_img"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimens_14"/>


        <TextView
            android:id="@+id/coin_ups_and_downs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_8"
            android:layout_toLeftOf="@+id/coin_ups_and_downs_txt"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/down_color"
            android:textSize="@dimen/dimens_14"/>

        <TextView
            android:id="@+id/coin_ups_and_downs_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:singleLine="true"
            android:text="24h"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimens_14"/>

        <TextView
            android:id="@+id/coin_one_for_cny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coin_ups_and_downs"
            android:layout_marginRight="@dimen/dimens_8"
            android:layout_toLeftOf="@+id/coin_one_for_cny_txt"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_14"/>

        <TextView
            android:id="@+id/coin_one_for_cny_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/coin_ups_and_downs"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/now_price"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimens_14"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="@dimen/dimens_60"
        android:layout_marginTop="@dimen/dimens_20"
        android:background="@color/line"/>
</RelativeLayout>

