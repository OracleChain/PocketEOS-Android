<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.oraclechain.pocketeos.modules..resourcemanager.resourcehome.activity.ResourceManagerActivity">

    <include layout="@layout/title_project"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40"
        app:tabIndicatorColor="@color/theme_color"
        app:tabIndicatorHeight="@dimen/dimens_5"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/theme_color"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/title_color"/>

    <View
        style="?attr/item_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_10"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
