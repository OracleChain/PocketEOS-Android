<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:orientation="vertical"
    tools:context="com.oraclechain.pocketeos.modules.account.mapaccount.MapAccountActivity">

    <include layout="@layout/title_project"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dimens_20"
        android:text="输入账户名称"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/dimens_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimens_20"
        android:paddingRight="@dimen/dimens_20">

        <TextView
            style="?attr/text_one_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40"
            android:gravity="center_vertical"
            android:text="@string/account"
            android:textSize="@dimen/dimens_16"/>

        <com.oraclechain.pocketeos.view.ClearEditText
            android:id="@+id/account_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:layout_marginLeft="@dimen/dimens_20"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/iniput_account_name"
            android:textColor="@color/title_color"
            android:textColorHint="@color/txt_color"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/dimens_17"/>
    </LinearLayout>

    <View
        style="?attr/line_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_line_cash"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dimens_20"
        android:text="输入ACTIVEKEY"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/dimens_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimens_20"
        android:paddingRight="@dimen/dimens_20">

        <TextView
            style="?attr/text_one_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40"
            android:gravity="center_vertical"
            android:text="@string/private_key"
            android:textSize="@dimen/dimens_16"/>

        <com.oraclechain.pocketeos.view.ClearEditText
            android:id="@+id/owner_private_key"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:layout_marginLeft="@dimen/dimens_20"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_private_key"
            android:inputType="textImeMultiLine"
            android:textColor="@color/title_color"
            android:textColorHint="@color/txt_color"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/dimens_17"/>
    </LinearLayout>


    <Button
        android:id="@+id/import_number"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_42"
        android:layout_marginBottom="@dimen/dimens_20"
        android:layout_marginLeft="@dimen/dimens_20"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_40"
        android:background="#FF4D7BFE"
        android:text="确认录入"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_14"/>

    <TextView
        style="?attr/text_two_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimens_20"
        android:paddingRight="@dimen/dimens_20"
        android:text="@string/map_account_toast"
        android:textSize="@dimen/dimens_13"
        />
</LinearLayout>
