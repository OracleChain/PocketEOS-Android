<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_header_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:orientation="vertical">

    <com.oraclechain.pocketeos.view.convenientbanner.ConvenientBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_150"
        android:focusableInTouchMode="true"
        app:canLoop="true"/>

    <RelativeLayout
        android:id="@+id/choose_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48">


        <TextView
            android:id="@+id/choose_type_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/choose_type_title"
            style="?attr/text_one_style"
            android:layout_marginLeft="@dimen/dimens_20"
            android:textSize="@dimen/dimens_14"/>

        <ImageView
            android:id="@+id/look_more"
            android:layout_width="@dimen/dimens_20"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/choose_type_title"
            android:scaleType="centerInside"
            android:src="@mipmap/drop_down"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:layout_alignParentBottom="true"
            style="?attr/line_style"/>
    </RelativeLayout>

</LinearLayout>
